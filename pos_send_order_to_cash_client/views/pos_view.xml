<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page string="Punto de venta">
                        <group string="Datos de comprobantes">
                            <field name="seq_ticket"/>
                            <field name="seq_ticket_fact"/>
                            <field name="seq_nota_venta"/>
                            <field name="seq_boleta"/>
                            <field name="seq_factura"/>
                            <field name="seq_send_order"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
